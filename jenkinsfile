pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.8.6-openjdk-18'
                    args '-v /root/.m2:/root/.m2'
                }
            }
        }
        stage('Launch MySQL') { 
            steps {
                sh 'docker run -d --name=mysqldb -p 3306:3306 mysql:5.7' 
                sh 'sleep 100'
            }
        }
        stage('Test') { 
            steps {
                sh 'mvn test' 
            }
        }
    }
}
