pipeline {
    agent any
    
    tools{
        maven '3.8.6'
    }
    stages {
        stage('Build & Package') {
            steps {
                sh 'mvn clean'
                sh 'mvn install -DskipTests'
            }
        }
        stage('Build zencaisse image') {
            steps {
                sh 'ls'
                sh 'ls target'
                sh 'docker build -t zencaisse:1.0 . '
            }
        }
    }
}
