pipeline {
    agent any
    stages {
        stage('Build & Package') {
            agent {
                docker {
                    image 'maven:3.8.6-openjdk-18'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn clean'
                sh 'mvn -DskipTests=true build'
                sh 'mvn -DskipTests=true package'
            }
        }
        stage('Build zencaisse image') {
            steps {
                sh 'docker build -t zencaisse:1.0 . '
            }
        }
    }
}
