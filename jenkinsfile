pipeline {
    agent any
    
    tools{
        maven '3.8.6'
    }
    stages {
        stage('Build & Package') {
            steps {
                sh 'mvn clean'
                sh 'mvn install -DskipTests'
            }
        }
        stage('Build image') {
            steps {
                sh 'ls'
                sh 'ls target'
                sh 'docker build -t zencaisse:$BUILD_NUMBER . '
            }
        }

        stage('Push image') {
            steps {
                sh 'docker image tag zencaisse:$BUILD_NUMBER lugar2020/zencaisse:$BUILD_NUMBER'
                sh 'docker image tag zencaisse:$BUILD_NUMBER lugar2020/zencaisse:latest'
                sh 'docker image push --all-tags lugar2020/zencaisse'
            }
        }
    }
}
