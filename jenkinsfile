pipeline {
    agent any
    stages {
        stage('Launch MySQL') { 
             steps {
                sh 'docker stop mysqldb'
                sh 'docker rm mysqldb'
                sh 'docker run --name=mysqldb -d -p 3306:3306 -e MYSQL_ROOT_PASSWORD=kemane -e MYSQL_DATABASE=db_zencaisse mysql:5.7' 
                sh 'sleep 60'
            }
        }
        stage('Build zencaisse image') {
            steps {
                sh 'docker build -t zencaisse:1.0 . '
            }
        }
        stage('Build run') {
            agent {
                docker {
                    image 'zencaisse:1.0'
                    args '-v /root/.m2:/root/.m2 -p 8090:8090 --link mysqldb:mysqldb'
                }
            }
            steps {
                sh 'mvn spring-boot:run' 
            }
        }
    }
}
