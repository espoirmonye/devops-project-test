pipeline {
    agent any
    stages {
        stage('Launch MySQL') { 
            agent {
                docker {
                    image 'mysql:5.7'
                    args ' --name=mysqldb -p 3306:3306 -e mysql_root_password=kemane -e mysql_database=db_zencaisse'
                }
            }
             steps {
                sh 'mysql --version' 
                sh 'mysql -u root -p kemane' 
                sh 'show databases' 
            }
        }
        stage('Build') {
            agent {
                docker {
                    image 'maven:3.8.6-openjdk-18'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn test' 
            }
        }
    }
}
